<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@color/white">

    <LinearLayout
        android:id="@+id/share_count_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/video_clickable_foreground_selector"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/choiceness_share_selector"/>

        <TextView
            android:id="@+id/item_share_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5a6473"
            android:textSize="11sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_count_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/share_count_layout"
        android:layout_weight="1"
        android:background="@drawable/video_clickable_foreground_selector"
        android:gravity="center"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/choiceness_comment_selector"/>

        <TextView
            android:id="@+id/item_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="1111111"
            android:textColor="#5a6473"
            android:textSize="11sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/like_count_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/video_clickable_foreground_selector"
        android:gravity="center_horizontal"/>
</LinearLayout>